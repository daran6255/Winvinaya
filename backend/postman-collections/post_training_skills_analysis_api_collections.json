            {
              "key": "candidate_id",
              "value": "{{candidate_db_id}}",
              "type": "text"
            },
            {
              "key": "skills_with_level",
              "value": "{\"Python\":\"Advanced\",\"SQL\":\"Intermediate\"}",
              "type": "text"
            },
            {
              "key": "remarks",
              "value": "Performed well in training.",
              "type": "text"
            },
            {
              "key": "resume",
              "type": "file",
              "src": ""
